# Mandalart Planner Environment Variables
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# Supabase Configuration
# =============================================================================
# Get these from your Supabase project dashboard at https://supabase.com
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
NEXT_PUBLIC_SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Optional: Database direct connection for migrations/scripts
# DATABASE_URL=postgresql://user:password@host:port/database

# =============================================================================
# Next.js Configuration
# =============================================================================
# Set to 'production' for production deployment
NODE_ENV=development

# Disable Next.js telemetry (optional)
NEXT_TELEMETRY_DISABLED=1

# =============================================================================
# Cloudflare Tunnel Configuration (for deployment)
# =============================================================================
# Get your tunnel token from Cloudflare Zero Trust dashboard
# Used when deploying with docker-compose for tunnel connectivity
CLOUDFLARE_TUNNEL_TOKEN={CLOUDFLARE_TUNNEL_TOKEN}

# =============================================================================
# Application Configuration
# =============================================================================
# Application URL (used for API callbacks, redirects, etc.)
# For local development: http://localhost:3000
# For production: your actual domain (e.g., https://your-domain.com)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# =============================================================================
# Security Configuration
# =============================================================================
# Generate a random secret for session signing
# You can use: openssl rand -base64 32
NEXTAUTH_SECRET=your-nextauth-secret-here

# =============================================================================
# Development Configuration
# =============================================================================
# Set to true to enable debug logging (development only)
DEBUG=false

# Port for the application (default: 3000)
PORT=3000